<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/twJatek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dobókocka játék"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
         />

    <TextView
        android:id="@+id/twJatekos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Játékos:"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/twJatek"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IVember"
        android:layout_below="@id/twJatekos"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/twGep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gép:"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/IVember"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IVgep"
        android:layout_below="@id/twGep"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndobas"
        android:text="Dobás"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/IVgep"
        />

</RelativeLayout>